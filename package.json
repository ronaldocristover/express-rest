{
  "name": "payment-method-service",
  "version": "1.0.0",
  "description": "Payment method management microservice",
  "main": "dist/entry-point.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/entry-point.js",
    "dev": "ts-node-dev --respawn --transpile-only src/entry-point.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts --max-warnings=0",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "check:unused": "tsc --noEmit --noUnusedLocals --noUnusedParameters",
    "check:console": "grep -r 'console\\.' src/ --include='*.ts' --include='*.js' && exit 1 || exit 0",
    "check:secrets": "node scripts/check-secrets.js",
    "pre-commit": "npm run check:unused && npm run lint:check && npm run check:console && npm run check:secrets",
    "prepare": "husky install",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "@types/redis": "^4.0.10",
    "@types/winston": "^2.4.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "prom-client": "^15.1.3",
    "redis": "^5.9.0",
    "uuid": "^9.0.0",
    "winston": "^3.18.3",
    "winston-loki": "^6.1.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.5",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.0",
    "prisma": "^5.1.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run lint:check",
      "npm run format:check",
      "npm run check:console",
      "npm run check:secrets"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
